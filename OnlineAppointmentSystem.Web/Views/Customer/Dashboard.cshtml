@model OnlineAppointmentSystem.Entity.DTOs.AppointmentDTO
@{
    ViewData["Title"] = "Hasta Dashboard";
}
<div class="container mt-5 dashboard-container">
    <div class="row mb-4">
        <div class="col text-center">
            <div class="mb-2 fw-bold" style="font-size:2rem; color:var(--primary-color)">Hoş geldin, @ViewBag.CustomerName</div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 rounded-4 upcoming-appointment-card">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="upcoming-icon flex-shrink-0">
                        <i class="bi bi-alarm"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Yaklaşan Randevunuz</h5>
                        @if (Model != null)
                        {
                            <div class="mb-1">
                                <span class="fw-semibold">@Model.ServiceName</span> <span class="text-muted">- @Model.EmployeeName</span>
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-calendar-event me-1"></i>
                                @Model.AppointmentDate.ToString("dd MMMM yyyy, HH:mm")
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-geo-alt me-1"></i>
                                @Model.Notes
                            </div>
                            <span class="badge bg-primary">@Model.StatusName</span>
                        }
                        else
                        {
                            <span class="text-muted">Henüz yaklaşan bir randevun bulunmuyor.</span>
                        }
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="/Appointments/Create" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Randevu Al
                </a>
            </div>
        </div>
    </div>
    
</div> 