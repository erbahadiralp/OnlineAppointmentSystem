@model OnlineAppointmentSystem.Entity.DTOs.EmployeeDTO
@{
    ViewData["Title"] = "Çalışan Detayları";
}
<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 520px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="doctor-avatar me-3">
                <i class="bi bi-person-circle"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0">@Model.FirstName @Model.LastName</h3>
                <div class="text-muted small">@Model.Title</div>
            </div>
        </div>
        <dl class="row mb-3">
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8"><i class="bi bi-envelope me-1"></i>@Model.Email</dd>
            <dt class="col-sm-4">Telefon</dt>
            <dd class="col-sm-8"><i class="bi bi-telephone me-1"></i>@Model.PhoneNumber</dd>
            <dt class="col-sm-4">Departman</dt>
            <dd class="col-sm-8"><i class="bi bi-building me-1"></i>@Model.Department</dd>
            <dt class="col-sm-4">Durum</dt>
            <dd class="col-sm-8">
                <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">@((Model.IsActive) ? "Aktif" : "Pasif")</span>
            </dd>
        </dl>
        <div class="mb-3">
            <div class="fw-semibold mb-1">Hizmetler</div>
            @if (Model.ServiceNames != null && Model.ServiceNames.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var s in Model.ServiceNames)
                    {
                        <li class="list-group-item ps-0"> <i class="bi bi-layers me-1"></i>@s</li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">Tanımlı hizmet yok.</span>
            }
        </div>
        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-arrow-left me-1"></i> Geri Dön
            </a>
        </div>
    </div>
</div>
