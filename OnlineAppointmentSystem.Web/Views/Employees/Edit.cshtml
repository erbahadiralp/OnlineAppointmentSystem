@model OnlineAppointmentSystem.Web.Models.EmployeeViewModels.EmployeeEditViewModel
@{
    ViewData["Title"] = "Çalışanı Düzenle";
}
<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 600px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3">
                <i class="bi bi-pencil-square"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0">Çalışanı Düzenle</h3>
                <div class="text-muted small">Çalışan bilgilerini güncelleyin</div>
            </div>
        </div>
        <form asp-action="Edit" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="UserId" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Ad</label>
                    <input class="form-control form-control-lg" value="@Model.FirstName" disabled />
                    <input type="hidden" asp-for="FirstName" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Soyad</label>
                    <input class="form-control form-control-lg" value="@Model.LastName" disabled />
                    <input type="hidden" asp-for="LastName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control form-control-lg" value="@Model.Email" disabled />
                    <input type="hidden" asp-for="Email" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Telefon</label>
                    <input class="form-control form-control-lg" value="@Model.PhoneNumber" disabled />
                    <input type="hidden" asp-for="PhoneNumber" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control form-control-lg" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Department" class="form-label"></label>
                <input asp-for="Department" class="form-control form-control-lg" />
                <span asp-validation-for="Department" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ServiceIds" class="form-label">Hizmetler</label>
                <select asp-for="ServiceIds" asp-items="Model.Services" multiple class="form-select form-select-lg"></select>
                <span asp-validation-for="ServiceIds" class="text-danger small"></span>
            </div>
            <div class="form-check mb-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-primary btn-lg px-4">Güncelle</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">İptal</a>
            </div>
        </form>
    </div>
</div>
