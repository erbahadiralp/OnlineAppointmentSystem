@model OnlineAppointmentSystem.Entity.DTOs.WorkingHoursDTO

@{
    ViewData["Title"] = "Çalışma Saati Sil";
}
<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 520px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3 bg-danger" style="background: #dc3545 !important;">
                <i class="bi bi-trash"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0 text-danger">Çalışma Saati Sil</h3>
                <div class="text-muted small">Bu işlem geri alınamaz!</div>
            </div>
        </div>
        <div class="alert alert-warning mb-4">
            <h5 class="mb-2"><i class="bi bi-exclamation-triangle me-2"></i>Bu çalışma saatini silmek istediğinizden emin misiniz?</h5>
            <div>Bu işlem geri alınamaz.</div>
        </div>
        <dl class="row mb-4">
            <dt class="col-sm-4">Çalışan</dt>
            <dd class="col-sm-8">@Model.EmployeeName</dd>
            <dt class="col-sm-4">Gün</dt>
            <dd class="col-sm-8">@Model.DayName</dd>
            <dt class="col-sm-4">Başlangıç Saati</dt>
            <dd class="col-sm-8">@Model.StartTime</dd>
            <dt class="col-sm-4">Bitiş Saati</dt>
            <dd class="col-sm-8">@Model.EndTime</dd>
            <dt class="col-sm-4">Aktif</dt>
            <dd class="col-sm-8">@(Model.IsActive ? "Evet" : "Hayır")</dd>
        </dl>
        <form asp-action="Delete" asp-route-id="@Model.WorkingHoursId" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="WorkingHoursId" />
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>
