@model OnlineAppointmentSystem.Entity.DTOs.CustomerDTO
@{
    ViewData["Title"] = "Müşteriyi Sil";
}
<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 520px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3 bg-danger" style="background: #dc3545 !important;">
                <i class="bi bi-trash"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0 text-danger">Müşteriyi Sil</h3>
                <div class="text-muted small">Bu işlem geri alınamaz!</div>
            </div>
        </div>
        <div class="alert alert-warning mb-4">
            <h5 class="mb-2"><i class="bi bi-exclamation-triangle me-2"></i>Bu müşteriyi silmek istediğinizden emin misiniz?</h5>
            <div>Bu işlem geri alınamaz ve bu müşteriye ait tüm bilgiler silinecektir.</div>
        </div>
        <dl class="row mb-4">
            <dt class="col-sm-4">Ad Soyad</dt>
            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4">Telefon</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CustomerId" />
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div> 