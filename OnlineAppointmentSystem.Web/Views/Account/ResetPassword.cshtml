@model OnlineAppointmentSystem.Web.Models.AccountViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 600px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3">
                <i class="bi bi-shield-lock fs-3 text-warning"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0">Şifre Sıfırlama</h3>
                <div class="text-muted small">Hesabınız için yeni bir şifre belirleyin</div>
            </div>
        </div>
        
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            Güvenliğiniz için güçlü bir şifre oluşturun. Büyük-küçük harf, rakam ve özel karakterler kullanın.
        </div>
        
        <form asp-action="ResetPassword" method="post" class="mt-3">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                </div>
            }
            
            <input asp-for="UserId" type="hidden" />
            <input asp-for="Token" type="hidden" />
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
                <div class="form-text small">En az 6 karakter uzunluğunda olmalıdır.</div>
            </div>
            
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <div class="d-flex gap-2 justify-content-end">
                <a asp-action="Login" class="btn btn-outline-secondary btn-lg px-4">İptal</a>
                <button type="submit" class="btn btn-warning btn-lg px-4">Şifremi Sıfırla</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 