@model OnlineAppointmentSystem.Web.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Hasta Kaydı";
}

<div class="login-bg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="login-card card border-0 shadow-lg rounded-4">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="login-icon mb-2">
                                <i class="bi bi-person-plus"></i>
                            </div>
                            <h2 class="fw-bold mb-1">Hasta Kaydı</h2>
                            <p class="text-muted mb-0">Hızlıca kayıt olun, randevu almaya başlayın.</p>
                        </div>
                        <form asp-action="Register" method="post" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad</label>
                                    <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Adınız" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad</label>
                                    <input asp-for="LastName" class="form-control form-control-lg" placeholder="Soyadınız" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="E-posta adresiniz" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Telefon numaranız" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Adres</label>
                                <textarea asp-for="Address" class="form-control form-control-lg" rows="2" placeholder="Adresiniz"></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="form-label">Şifre</label>
                                    <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Şifreniz" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Şifrenizi tekrar girin" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person-plus me-1"></i> Kayıt Ol
                                </button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <span class="text-muted">Zaten hesabınız var mı?</span>
                            <a asp-action="Login" class="fw-semibold text-primary text-decoration-none ms-1">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}