@model OnlineAppointmentSystem.Web.Models.AccountViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 600px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3">
                <i class="bi bi-key fs-3 text-warning"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0">Şifremi Unuttum</h3>
                <div class="text-muted small">Şifrenizi sıfırlamak için e-posta adresinizi girin</div>
            </div>
        </div>
        
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            Kayıtlı e-posta adresinize bir şifre sıfırlama bağlantısı göndereceğiz.
        </div>
        
        <form asp-action="ForgotPassword" method="post" class="mt-3">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                </div>
            }
            
            <div class="mb-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="d-flex gap-2 justify-content-between">
                <a asp-action="Login" class="btn btn-outline-secondary btn-lg px-4">Giriş Sayfasına Dön</a>
                <button type="submit" class="btn btn-warning btn-lg px-4">Bağlantı Gönder</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 