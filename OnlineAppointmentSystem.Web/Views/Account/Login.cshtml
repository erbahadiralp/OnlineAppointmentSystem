@model OnlineAppointmentSystem.Web.Models.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-bg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-card card border-0 shadow-lg rounded-4">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="login-icon mb-2">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <h2 class="fw-bold mb-1">Hoş Geldiniz</h2>
                            <p class="text-muted mb-0">Hesabınıza giriş yapın</p>
                        </div>
                        <form asp-action="Login" method="post" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="E-posta adresiniz" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Şifreniz" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="mb-3 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
                                </div>
                                <div>
                                    <a asp-action="ForgotPassword" class="text-decoration-none small">Şifremi unuttum</a>
                                </div>
                            </div>
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                                </button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <span class="text-muted">Hesabınız yok mu?</span>
                            <a asp-action="Register" class="fw-semibold text-primary text-decoration-none ms-1">Hasta Kaydı</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}