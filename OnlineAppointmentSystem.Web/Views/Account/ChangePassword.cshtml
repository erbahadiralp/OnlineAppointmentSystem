@model OnlineAppointmentSystem.Web.Models.AccountViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 600px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3">
                <i class="bi bi-key fs-3 text-warning"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0">Şifre Değiştir</h3>
                <div class="text-muted small">Hesabınız için yeni bir şifre belirleyin</div>
            </div>
        </div>
        
        <form asp-action="ChangePassword" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input asp-for="OldPassword" class="form-control form-control-lg" autocomplete="current-password" />
                <span asp-validation-for="OldPassword" class="text-danger small"></span>
            </div>
            
            <div class="separator my-4 d-flex align-items-center">
                <hr class="flex-grow-1">
                <div class="mx-3 text-muted small">YENİ ŞİFRE</div>
                <hr class="flex-grow-1">
            </div>
            
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                <div class="form-text small">En az 6 karakter uzunluğunda olmalıdır.</div>
            </div>
            
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-warning btn-lg px-4">Şifreyi Değiştir</button>
                <a asp-action="Profile" class="btn btn-outline-secondary btn-lg px-4">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 