@model OnlineAppointmentSystem.Web.Models.EmployeeViewModels.EmployeeDashboardViewModel
@{
    ViewData["Title"] = "Doktor Dashboard";
}
<div class="container employee-dashboard-container">
    <div class="row mb-4">
        <div class="col text-center">
            <div class="fw-bold mb-2" style="font-size:2rem; color:var(--primary-color)">Hoş geldin, @Model.EmployeeName</div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col">
            <ul class="nav nav-tabs dashboard-tabs" id="dashboardTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="today-tab" data-bs-toggle="tab" data-bs-target="#today" type="button" role="tab" aria-controls="today" aria-selected="true">
                        Bugün <span class="tab-badge bg-danger">@Model.TodayAppointments.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="false">
                        Gelecek Randevular <span class="tab-badge bg-info">@Model.UpcomingAppointments.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false">
                        Onay Bekleyen <span class="tab-badge bg-danger">@Model.PendingAppointments.Count</span>
                    </button>
                </li>
            </ul>
            <div class="tab-content pt-4" id="dashboardTabContent">
                <div class="tab-pane fade show active" id="today" role="tabpanel" aria-labelledby="today-tab">
                    <div class="row g-4">
                        @if (Model.TodayAppointments.Any())
                        {
                            @foreach (var appt in Model.TodayAppointments)
                            {
                                @Html.Partial("_EmployeeAppointmentCard", appt)
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center text-muted">Bugün için randevu yok.</div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
                    <div class="row g-4">
                        @if (Model.UpcomingAppointments.Any())
                        {
                            @foreach (var appt in Model.UpcomingAppointments)
                            {
                                @Html.Partial("_EmployeeAppointmentCard", appt)
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center text-muted">Yaklaşan randevu yok.</div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
                    <div class="row g-4">
                        @if (Model.PendingAppointments.Any())
                        {
                            @foreach (var appt in Model.PendingAppointments)
                            {
                                @Html.Partial("_EmployeeAppointmentCard", appt)
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center text-muted">Onay bekleyen randevu yok.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 