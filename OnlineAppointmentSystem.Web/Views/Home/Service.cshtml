@model IEnumerable<OnlineAppointmentSystem.Entity.DTOs.ServiceDTO>

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-6 fw-bold mb-2">Tıbbi Birimlerimiz</h1>
                <p class="lead mb-2" style="font-size:1.05rem;">Uzman kadromuz ve modern teknolojimizle sağlığınız için en iyi hizmeti sunuyoruz.</p>
                <div class="d-flex justify-content-center gap-2">
                    <a href="#services" class="btn btn-light btn-sm px-3">
                        <i class="bi bi-arrow-down-circle me-1"></i>Hizmetlerimiz
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-sm px-3">
                            <i class="bi bi-person-plus me-1"></i>Hasta Kaydı
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="service-card h-100">
                        <div class="service-icon">
                            <i class="bi bi-hospital"></i>
                        </div>
                        <div class="service-content">
                            <h3 class="service-title">@service.ServiceName</h3>
                            <p class="service-description">@service.Description</p>
                            <div class="service-details">
                                <div class="detail-item">
                                    <i class="bi bi-clock"></i>
                                    <span>@service.Duration dakika</span>
                                </div>
                                <div class="detail-item">
                                    <i class="bi bi-cash"></i>
                                    <span>₺@service.Price</span>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }
        .hero-section {
            padding-top: 1.5rem !important;
            padding-bottom: 1.5rem !important;
        }
        .service-card {
            background: var(--card-background);
            border-radius: 1rem;
            padding: 1.25rem;
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        .service-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }
        .service-icon i {
            font-size: 1.25rem;
            color: white;
        }
        .service-title {
            font-size: 1.05rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--text-color);
        }
        .service-description {
            color: var(--light-text);
            font-size: 0.9rem;
            margin-bottom: 1rem;
            min-height: 2em;
        }
        .service-details {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
        }
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            color: var(--light-text);
            font-size: 0.85rem;
        }
        .detail-item i {
            color: var(--primary-color);
        }
    </style>
}
