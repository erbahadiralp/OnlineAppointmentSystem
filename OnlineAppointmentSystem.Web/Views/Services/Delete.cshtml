@model OnlineAppointmentSystem.Entity.DTOs.ServiceDTO
@{
    ViewData["Title"] = "Tıbbi Birimi Sil";
}
<div class="container py-4 d-flex justify-content-center align-items-center min-vh-80">
    <div class="appointment-create-card p-4 shadow rounded-3" style="max-width: 520px; width:100%">
        <div class="d-flex align-items-center mb-3">
            <div class="feature-icon me-3 bg-danger" style="background: #dc3545 !important;">
                <i class="bi bi-trash"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0 text-danger">Tıbbi Birimi Sil</h3>
                <div class="text-muted small">Bu işlem geri alınamaz!</div>
            </div>
        </div>
        <div class="alert alert-warning mb-4">
            <h5 class="mb-2"><i class="bi bi-exclamation-triangle me-2"></i>Bu tıbbi birimi silmek istediğinizden emin misiniz?</h5>
            <div>Bu işlem geri alınamaz ve bu tıbbi birime ait tüm randevular etkilenecektir.</div>
        </div>
        <dl class="row mb-4">
            <dt class="col-sm-4">Tıbbi Birim Adı:</dt>
            <dd class="col-sm-8">@Model.ServiceName</dd>
            <dt class="col-sm-4">Açıklama:</dt>
            <dd class="col-sm-8">@Model.Description</dd>
            <dt class="col-sm-4">Fiyat:</dt>
            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
            <dt class="col-sm-4">Süre:</dt>
            <dd class="col-sm-8">@Model.Duration dakika</dd>
        </dl>
        <form asp-action="Delete" asp-route-id="@Model.ServiceId" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ServiceId" />
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>
